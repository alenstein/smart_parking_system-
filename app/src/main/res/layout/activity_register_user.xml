<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerUser">

    <TextView
        android:id="@+id/signIn"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Smart Parking"
        android:textColor="#03DAC6"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <EditText
        android:id="@+id/email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="9dp"
        android:height="75dp"
        android:background="@color/teal_700"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:gravity="center"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:outlineAmbientShadowColor="#03DAC6"
        android:padding="20dp"
        android:shadowColor="#03DAC6"
        android:textColor="@color/purple_200"
        android:textColorHint="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219" />


    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="9dp"
        android:height="75dp"
        android:background="@color/teal_700"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:gravity="center"
        android:hint="077123456789"
        android:inputType="phone"
        android:outlineAmbientShadowColor="#03DAC6"
        android:padding="20dp"
        android:shadowColor="#03DAC6"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.389" />

    <EditText
        android:id="@+id/plateNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="9dp"
        android:height="75dp"
        android:background="@color/teal_700"
        android:drawableLeft="@drawable/ic_baseline_directions_car_24"
        android:gravity="center"
        android:hint="ABC1234"
        android:inputType="text"
        android:outlineAmbientShadowColor="#03DAC6"
        android:padding="20dp"
        android:shadowColor="#03DAC6"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.521" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:height="75dp"
        android:background="@color/teal_700"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:gravity="center_horizontal"
        android:hint="password"
        android:inputType="textPassword"
        android:outlineAmbientShadowColor="#03DAC6"
        android:padding="20dp"
        android:shadowColor="#03DAC6"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.672"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="182dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:width="100dp"
        android:height="30dp"
        android:background="#03DAC6"
        android:clickable="true"
        android:minHeight="48dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="#5E35B1"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.806" />


</androidx.constraintlayout.widget.ConstraintLayout>

